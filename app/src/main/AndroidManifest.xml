<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.intelligentsoftwaresdev.bankapp">

    <uses-feature
        android:name="android.hardware.fingerprint"
        android:required="true" />

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BankApp"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.TransactionDetailsActivity"></activity>
        <activity android:name=".activity.ForgotPasswordActivity" />
        <activity android:name=".activity.FingerPrintActivity" />
        <activity android:name=".activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.AccountActivity" />
        <activity android:name=".activity.BillingActivity" />
        <activity android:name=".activity.SendMoneyActivity" />
        <activity android:name=".activity.VerificationActivity" />
        <activity android:name=".activity.LoginActivity" />
        <activity android:name=".activity.SignUpActivity" />
        <activity android:name=".activity.MainActivity" />
    </application>

</manifest>